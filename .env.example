# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Lambda Labs API (for GPU training)
LAMBDA_API_KEY=your_lambda_api_key_here
LAMBDA_CLOUD_API_KEY=your_lambda_cloud_api_key_here

# Fine-tuning Configuration
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=pro-roofing-ai
HUGGINGFACE_TOKEN=your_hf_token_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/proroofingai
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# CRM Integration
HUBSPOT_API_KEY=your_hubspot_api_key_here
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here
SALESFORCE_USERNAME=your_salesforce_username_here
SALESFORCE_PASSWORD=your_salesforce_password_here

# Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
AGENT_MODEL=gpt-4

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=pro-roofing-ai-bucket

# Google Cloud Configuration (optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id_here

# Azure Configuration (optional)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# n8n Workflow Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# CrewAI Configuration
CREWAI_API_KEY=your_crewai_api_key_here

# Zapier Configuration
ZAPIER_API_KEY=your_zapier_api_key_here

# Development Settings
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Security
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Training Settings
TRAINING_BATCH_SIZE=4
TRAINING_LEARNING_RATE=2e-5
TRAINING_EPOCHS=3
TRAINING_WARMUP_STEPS=100
TRAINING_SAVE_STEPS=500
TRAINING_EVAL_STEPS=100

# Model Settings
MAX_SEQ_LENGTH=2048
MODEL_NAME=meta-llama/Llama-2-7b-chat-hf
BASE_MODEL_CACHE_DIR=./models/base

# Data Processing
MAX_DATASET_SIZE=1000000
VALIDATION_SPLIT=0.1
TEST_SPLIT=0.1
DATA_PREPROCESSING_WORKERS=4

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhooks

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=pro-roofing-ai-backups